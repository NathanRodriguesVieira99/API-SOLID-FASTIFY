{
    "name": "SOLID NodeJS",
    "version": "1.0.0",
    "engines": {
        "node": ">=21.7.3"
    },
    "main": "index.js",
    "scripts": {
        "dev": "tsx watch src/server.ts",
        "build": "tsup src --out-dir build",
        "start": "node build/server.cjs",
        "prepare": "husky",
        "commit": "cz",
        "test": "jest  --passWithNoTests --maxWorkers=80% --runInBand --no-cache ",
        "test:watchAll": "jest --watchAll",
        "test:watch": "jest --watch --maxWorkers=25%",
        "test:coverage": "jest --coverage",
        "test:staged": "jest --findRelatedTests --passWithNoTests --runInBand --no-cache",
        "test:push": "jest --coverage --passWithNoTests --maxWorkers=70% --bail  --no-cache",
        "format": "prettier --write .",
        "lint": "eslint --fix src/**/*.ts",
        "prisma:generate": "prisma generate",
        "prisma:migrate": "prisma migrate dev"
    },
    "keywords": [],
    "author": "",
    "license": "ISC",
    "dependencies": {
        "@commitlint/cli": "^19.8.1",
        "@commitlint/config-conventional": "^19.8.1",
        "@fastify/cors": "11.0.1",
        "@fastify/swagger": "9.5.1",
        "@fastify/swagger-ui": "5.2.2",
        "@prisma/client": "^6.7.0",
        "bcryptjs": "^3.0.2",
        "dotenv": "^16.5.0",
        "fastify": "^5.3.2",
        "fastify-type-provider-zod": "4.0.2",
        "husky": "^9.1.7",
        "lint-staged": "^16.0.0",
        "prettier": "^3.5.3",
        "zod": "^3.24.4"
    },
    "devDependencies": {
        "@eslint/js": "^9.26.0",
        "@eslint/json": "^0.12.0",
        "@types/jest": "^29.5.14",
        "@types/node": "^22.15.17",
        "@types/supertest": "6.0.3",
        "cz-conventional-changelog": "^3.3.0",
        "eslint": "^9.26.0",
        "globals": "^16.1.0",
        "jest": "^29.7.0",
        "prisma": "^6.7.0",
        "supertest": "7.1.1",
        "ts-jest": "29.3.2",
        "ts-node": "^10.9.2",
        "tsup": "^8.4.0",
        "tsx": "^4.19.4",
        "typescript": "^5.8.3",
        "typescript-eslint": "^8.32.1"
    },
    "config": {
        "commitizen": {
            "path": "./node_modules/cz-conventional-changelog"
        }
    }
}
