{
    "compilerOptions": {
        "target": "ES2023",
        "module": "Node16",
        "lib": ["ES2023"],
        "rootDir": "./",
        "outDir": "./build",
        "baseUrl": "./",
        "paths": {
            "@/*": ["./src/*"]
        },
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "allowImportingTsExtensions": true,
        "noEmit": true,
        "resolveJsonModule": true
    }
}
